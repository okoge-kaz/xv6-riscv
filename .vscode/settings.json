{
    // c cpp settings
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 2, ColumnLimit: 0 }",
    "[cpp]": {
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.tabSize": 4,
        "editor.wordBasedSuggestions": true
    },
    "[c]": {
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace",
        "editor.semanticHighlighting.enabled": true,
        "editor.wordBasedSuggestions": true
    },
    "files.associations": {
        "__config": "c",
        "locale": "c",
        "__hash_table": "c",
        "__split_buffer": "c",
        "array": "c",
        "bitset": "c",
        "initializer_list": "c",
        "unordered_map": "c",
        "vector": "c",
        "fcntl.h": "c",
        "fs.h": "c"
    }
}
